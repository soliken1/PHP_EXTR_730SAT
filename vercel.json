{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "vercel-php",
            "config": {
                "composer": "composer install --no-dev --optimize-autoloader"
            }
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "public/index.php" },
        { "src": "/(.*)", "dest": "public/index.php" }
    ]
}
